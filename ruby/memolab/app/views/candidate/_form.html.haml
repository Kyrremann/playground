  = f.label :image
  = f.text_field :image
  %br
  = f.label :email
  = f.text_field :email
  %br
  = f.label :phone
  = f.text_field :phone
  %br
  = f.label :job
  = f.text_field :job
  %br
  = f.label :linkedin
  = f.text_field :linkedin
