!!!
%html
  %head
    %meta{:content => "text/html; charset=UTF-8", "http-equiv" => "Content-Type"}/
    %title Memolab
    = csrf_meta_tags
    //%link(rel="stylesheet" href="//yui-s.yahooapis.com/pure/0.6.0/pure-min.css")
    = stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload'
    = javascript_include_tag 'application', 'data-turbolinks-track': 'reload'

  %body
    #layout.content.pure-g
      #nav.pure-u
        %a.nav-menu-button{:href => "#"} Menu
        .nav-inner
          %a.primary-button.pure-button{:href => new_candidate_path}
            New candidate
          .pure-menu
            %ul.pure-menu-list
              %li.pure-menu-item
                %a.pure-menu-link{:href => overview_path} Notes
              -#%li.pure-menu-item
                %a.pure-menu-link{:href => candidates_path } Candidates
              -#%li.pure-menu-item
                %a.pure-menu-link{:href => "#"} Projects
      = yield
